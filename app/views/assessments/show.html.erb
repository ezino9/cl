<div class="row">
    <!-- Left sidebar -->
    <div class="col-md-4">
        <% if @assessments.exists? %>
          <div class="list-group">
              <% @assessments.each do |assessment| %>
                <li class="list-group-item"><%= link_to assessment.name, assessment_path(assessment) %></li>
              <% end %>
          </div>
        <% else %>
          <p>THis is underconstruction, come back later please!!</p>
        <%end%>
    </div><!-- End of leftside bar -->

    <!-- main content-->
    <div class="col-md-8">
        <% if @assessment.name == "Employment Test" %>
           <h2 class="page-header">Employment Test</h2>
            <% if @blogs.exists?%>
               <% @blogs.each do |blog| %>
                 <div class="well">
                    <h3 class="page-header"><%= raw blog.title%></h3> 
                    <%= raw blog.body%> 
                 </div>
               <% end %>
            <% else %>
              <p>This part is under construction, it will be available as soon as possible</p>
            <% end %>
        <% end %>
